# Discord Bot Config
DISCORD_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-application-id
# Optional: register commands to a single guild for faster propagation during dev
DEV_GUILD_ID=your-dev-guild-id

# Kilocode OpenRouter-compatible endpoint and API key
KILOCODE_API_KEY=your-kilocode-api-key
OPENROUTER_BASE=https://kilocode.ai/api/openrouter
MODEL=openai/gpt-4.1

# Optional behavior
# SYSTEM_PROMPT=You are Kanna Akizuki, a helpful AI companion for this server.
# REPLY_PREFIX=Kanna:
# Optional OpenRouter headers (used by the client if provided)
OPENROUTER_REFERER=
OPENROUTER_TITLE=Kanna Akizuki Bot

# Memory persistence
# File path where chat history is stored per guild/channel
MEMORY_PATH=data/memory.json
# Max messages kept per channel for context
MEMORY_CHANNEL_LIMIT=200
# Reply formatting
# Strip assistant name prefixes like "Kanna Akizuki:" from replies (true/false)
REPLY_STRIP_ASSISTANT_NAME=true
# Comma-separated aliases to strip if they appear as a prefix in replies
ASSISTANT_ALIASES=Kanna,Kanna Akizuki